                        <div class="col-sm-10">
                          <input type="password" class="form-control" name="c_password" placeholder="should be filled">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword" class="col-sm-2 control-label">profile image url</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" name="c_profile" value="<%=@user.profile_img%>">
